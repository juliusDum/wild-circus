{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1 class="mt-3" style="text-align: center">{{ artist.name }}</h1>
    <div class="card" style="width: 30rem; margin-left: 32%">
        <img src="{{ artist.picture }}" class="card-img-top" alt="...">
        <div class="card-body">
            <p class="card-text">disciplined: {{ artist.disciplined }}</p>
            <p class="card-text">Event: {{ artist.event.name }}</p>
        </div>
    </div>
    <br>

    <a class="btn btn-info mb-2" href="{{ path('artist_index') }}">back to list</a>
{% endblock %}
